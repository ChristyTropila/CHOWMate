<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <android.widget.RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bee" />

    <TextView
        android:id="@+id/welcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome ChowMate."
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:textSize="30sp"
        android:textColor="#0E0D0D"/>
    <TextView
        android:id="@+id/createProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your profile and get chowing!"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"
        android:textSize="17sp"
        android:textColor="#0E0D0D"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/createProfile"
        android:layout_margin="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Birthdate"
                android:textColor="#0E0D0D"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Gender Identity"
                android:textColor="#0E0D0D"
                android:textSize="14sp"
                android:textStyle="bold"
                android:inputType="text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Favorite Foods"
                android:textColor="#0E0D0D"
                android:textSize="14sp"
                android:textStyle="bold"
                android:inputType="text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_alignLeft="@+id/card"
        android:layout_alignRight="@+id/card"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-200dp"
        android:layout_marginRight="35dp"
        android:elevation="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/side_nav_bar"
            android:text="Create"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#0E0D0D"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-130dp"
        android:elevation="10dp">
        <Button
            android:id="@+id/profileLater"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/side_nav_bar"
            android:text="Save For Later"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#0E0D0D"/>

    </RelativeLayout>




</RelativeLayout>